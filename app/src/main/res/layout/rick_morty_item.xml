<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:strokeColor="#505050"
        app:strokeWidth="1dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#505050"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/charPoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/charName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/jockey_one"
                        android:singleLine="true"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/charStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charName"
                        android:layout_alignParentStart="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/book"
                        android:singleLine="true"
                        android:text="Alive"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/charDash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charName"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_toEndOf="@+id/charStatus"
                        android:ellipsize="end"
                        android:fontFamily="@font/book"
                        android:singleLine="true"
                        android:text="-"
                        android:textColor="@color/gray_400"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/charSpecies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charName"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/charDash"
                        android:ellipsize="end"
                        android:fontFamily="@font/book"
                        android:singleLine="true"
                        android:text="Human"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/charGenderHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charSpecies"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/book"
                        android:singleLine="true"
                        android:text="Gender: "
                        android:textColor="@color/gray_300"
                        android:textSize="8sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/charGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/charGenderHolder"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/book"
                        android:singleLine="true"
                        android:text="Male"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>